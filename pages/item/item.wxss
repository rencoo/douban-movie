.meta{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx;
}

.poster{
  width: 100%;
  height: 800rpx;
  margin: 20rpx;
}

.title{
  font-size: 32rpx;
  color: #444;
}

.info {
  font-size: 24rpx;
  color: #888;
  padding: 20rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
}

.summary {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  padding: 30rpx;
}
.sum_title{
  font-size: 32rpx;
  padding-bottom: 20rpx;
}

.reviews{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  padding: 30rpx;
}

.rev_title{
  font-size: 32rpx;
  padding-bottom: 20rpx;
}

.rev_summary{
  padding-bottom: 10rpx;
}