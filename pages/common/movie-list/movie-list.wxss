.item {
  display: flex;
  width: 100%;
  height: 200rpx;
  padding: 15rpx;
  border: 0.5rpx solid	#efefef;
  box-sizing: border-box;
  cursor: pointer;
}

.item .left_img{
  /* float: left; */
  height: 170rpx;
  width: 115rpx;
}

.item .right{
  position: relative;
  /* overflow: hidden; */
  flex:1;
  padding-left: 30rpx;
}
.right_text{
  display: flex;
  flex-direction: column;
}
.right_text .title{
  font-size: 32rpx;
}
.right_text .original_title{
  font-size: 26rpx;
  color: #c0c0c0;
}
.right_text .directors{
  font-size: 26rpx;
  color: #999;
}
.right_score{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 50rpx;
  border-radius: 30%;
  text-align: center;
  font-size: 28rpx;
  color: white;
  background: rgb(255, 71, 80);
}